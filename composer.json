{
    "name": "tkaratug/eloquent-scope-assertion",
    "description": "Eloquent scope assertion for testing Laravel applications.",
    "keywords": [
        "eloquent",
        "laravel",
        "scope",
        "assertion",
        "test"
    ],
    "homepage": "https://github.com/tkaratug/eloquent-scope-assertion",
    "license": "MIT",
    "authors": [
        {
            "name": "Turan KaratuÄŸ",
            "email": "tkaratug@hotmail.com.tr",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.0|^8.1",
        "illuminate/contracts": "^8.0|^9.0"
    },
    "autoload": {
        "psr-4": {
            "Tkaratug\\EloquentScopeAssertion\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tkaratug\\EloquentScopeAssertion\\Tests\\": "tests"
        }
    },
    "scripts": {
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
